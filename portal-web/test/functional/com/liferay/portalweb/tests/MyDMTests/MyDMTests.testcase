@component-name = "portal-document-management"
definition {

	property testray.main.component.name = "Document Management";

	setUp {
		TestCase.setUpPortalInstance();

		User.firstLoginPG();

		Navigator.openURL();

		task ("Creating a Page with a Documents And Media Portlet") {
			JSONLayout.addPublicLayout(
				groupName = "Guest",
				layoutName = "Documents and Media Page");

			JSONLayout.addWidgetToPublicLayout(
				column = "1",
				groupName = "Guest",
				layoutName = "Documents and Media Page",
				widgetName = "Documents and Media");
		}

		task ("Go to Documents and Media Page") {
			Navigator.gotoPage(pageName = "Documents and Media Page");
		}
		task("Add Files using API"){
			JSONDocument.addFileWithUploadedFile(
				dmDocumentTitle = "DMTest",
				groupName = "Guest",
				mimeType = "image/jpeg",
				sourceFileName = "Document_1.jpeg");

			JSONDocument.addFileWithUploadedFile(
				dmDocumentTitle = "DMTest2",
				groupName = "Guest",
				mimeType = "image/jpeg",
				sourceFileName = "Document_2.jpeg");
		}
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			DMDocument.tearDownCP();

			JSONLayout.deletePublicLayout(
				groupName = "Guest",
				layoutName = "Documents and Media Page");

			User.logoutPG();
		}
	}

	@description = "Can Delete a Documents and Media"
	@priority = "5"
	test CanDeleteDM {
		task ("the User delete a document and media") {
			ProductMenu.gotoPortlet(
				category = "Content & Data",
				portlet = "Documents and Media");

			DMDocument.deleteCP(dmDocumentTitle = "DMTest2");
		}

		task ("Assert that one of the contents is still there") {
			Navigator.gotoPage(pageName = "Documents and Media Page");

			DMNavigator.gotoDocumentCP(dmDocumentTitle = "DMTest");

			DMDocument.viewCP(dmDocumentTitle = "DMTest");
		}

		task ("Assert the content that was deleted is not there") {
			ProductMenu.gotoPortlet(
				category = "Content & Data",
				portlet = "Documents and Media");

			DMDocument.cannotViewCP(dmDocumentTitle = "DMTest2");
		}
	}

}